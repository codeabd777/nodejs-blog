<form action="/createPost" method="Post" enctype="multipart/form-data">
    <div class="group">
        <h3>Creat new post</h3>
    </div>
    <div class="group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="control" placeholder="Post title" value="<%= title %>">
    </div>
    <div class="group">
        <label for="body">Body</label>
        <textarea name="body" id="body" class="control" cols="30" rows="10"><%= input_title %></textarea>
    </div>
   
    <div class="group">
        <input type="submit" value="Add Post" class="btn btn-sweet">
    </div>
</form>